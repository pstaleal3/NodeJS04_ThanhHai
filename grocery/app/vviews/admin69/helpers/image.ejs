<% 
    imageHelper = (folder, imageName, alt = "Image",width="100",height="100",id="showImage") => {

        if(imageName == null){ 
            imageName = 'no-avatar.png';
        }
        return `<img class="img-thumbnail" src="${folder + imageName}" alt="${alt}" width=${width} style="object-fit: cover;height:${height}px;" id="${id}" onerror="notImage(this,'${folder}')" />`;
    }
    
    imageMulti = (images,folderUpload) => {
        if(!images) return null;
        let xhtml = '';
        let arr = images.split(',');
        arr.forEach(value => {
            xhtml += `<div class="col-md-2 mb-3">
                        <img src="${folderUpload + value}" class="img-fluid img-thumbnail" data-filename="${value}" style="height: 90px">
                    </div>`;
        })
        return xhtml;
        
    }
%>



