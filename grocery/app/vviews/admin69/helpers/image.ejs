<% 
    imageHelper = (folder, imageName, alt = "Image",width="100",height="100",id="showImage") => {

        if(imageName == null){ 
            imageName = 'no-avatar.png';
        }
        return `<img class="img-thumbnail" src="${folder + imageName}" alt="${alt}" width=${width} style="object-fit: cover;height:${height}px;" id="${id}" onerror="notImage(this,'${folder}')" />`;
    }
%>



