<% 
	const linkPrefix = systemConfig.prefixBlog + `/auth/login/`;
%>

<div class="login-panel panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Please Sign In</h3>
    </div>
    <div class="panel-body">
        <form role="form" action="<%= linkPrefix %>" method="POST">
            <fieldset>
                <div class="form-group">
                    <input class="form-control" placeholder="admin" name="username" value="<%= item.username %>" >
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="123456" name="password" >
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Login </button>
                </div>
            </fieldset>
        </form>
    </div>
</div>